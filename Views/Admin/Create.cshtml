@model WebboardMVC.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "เพิ่มผู้ใช้ระบบใหม่";
}

<h4>เพิ่มผู้ใช้ระบบใหม่</h4>
<hr />
<form asp-controller="Admin" asp-action="Create">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="container">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group">
                <label asp-for="PasswordAgain"></label>
                <input asp-for="PasswordAgain" class="form-control" />
                <span class="text-danger" asp-validation-for="PasswordAgain"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Register</button>
                <button type="button" asp-action="Index" class="btn btn-danger">Cancel</button>
            </div>
        </div>
    </div>
</form>


