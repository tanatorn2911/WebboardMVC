@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Role ในระบบ";
}

<h3 class="alert alert-primary">รายการสิทธิ์ในระบบ</h3>
<a asp-controller="Role" asp-action="Create">เพิ่มสิทธิ์ใหม่ในระบบ</a>
<table class="table table-striped table-bordered">
    <tr>
        <th>รหัส</th>
        <th>ชื่อสิทธิ์</th>
    </tr>

    @if (Model == null)
    {
        <tr>
            <td colspan="2">ไม่มีสิทธิ์อยู่ในระบบ</td>
        </tr>
    }
    else
    {
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    }
</table>
