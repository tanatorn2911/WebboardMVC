@model WebboardMVC.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "ลงทะเบียน";
}

<h1 class="alert alert-success text-center">ลงทะเบียน (Register)</h1>

@if (User.Identity.IsAuthenticated)
{
    <div class="alert alert-primary text-center">สวัสดีคุณ @User.Identity.Name</div>
}
else
{
    <div class="container d-flex justify-content-center align-items-center">
        <form asp-controller="Account" asp-action="Create" class="col-md-4">
            <!-- ปรับขนาดคอนเทนเนอร์ให้กว้างขึ้น -->
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="PasswordAgain"></label>
                <input asp-for="PasswordAgain" class="form-control" type="password" />
                <span class="text-danger" asp-validation-for="PasswordAgain"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Register</button>
                <button type="button" asp-action="Index" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
}
