@model WebboardMVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="alert alert-primary text-center">Login เข้าสู่ระบบ</h1>

<div class="container d-flex justify-content-center align-items-center" >
    <div class="col-md-4">
        <!-- ปรับขนาดให้กว้างขึ้นตามที่ต้องการ -->
        <form asp-controller="Account" asp-action="Login">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <br />

            <div class="form-group">
                <button type="submit" class="btn btn-success">Login</button>
                <button type="button" asp-action="Index" class="btn btn-danger">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    ยังไม่ได้ลงทะเบียน<a asp-controller="Account" asp-action="Index">คลิกที่นี่</a>
</div>


