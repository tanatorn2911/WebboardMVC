
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <!-- Search Bar in the center -->
    <div class="d-flex justify-content-center w-100">
        <div class="input-group col-4">
            <form asp-controller="Webboard" asp-action="Search" class="w-100">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="search-icon" autocomplete="off" />
                    <span class="input-group-text" id="search-icon" role="button" tabindex="0" onclick="this.parentElement.querySelector('form').submit()">
                        <i class="fas fa-search"></i>
                    </span>
                </div>
            </form>

        </div>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <!-- Right navbar links -->
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-primary">
                        Logout
                    </button>
                </form>
            </li>
        </ul>
    }
</nav>
<!-- /.navbar -->
